<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    >

    <View
        android:layout_width="400dp"
        android:layout_height="1dp"
        android:layout_gravity="center"
        android:layout_marginTop="2dp"
        android:background="#ACA1A1" />

    <TextView
        android:id="@+id/cv"
        android:layout_width="217dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center_vertical|fill_vertical|end"
        android:fontFamily="cursive"
        android:isScrollContainer="false"
        android:lineSpacingExtra="8sp"
        android:text="CV"
        android:textColor="#5E056E"
        android:textSize="40sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/userAlert"
        android:layout_width="match_parent"
        android:layout_height="31dp"
        android:gravity="center"
        android:textColor="#B71C1C" />

    <TextView
        android:id="@+id/education"
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:layout_gravity="center_horizontal|center_vertical|fill_vertical|end"
        android:fontFamily="serif-monospace"
        android:isScrollContainer="false"
        android:lineSpacingExtra="8sp"
        android:text="Education"
        android:textColor="#5E056E"
        android:textSize="28sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="13dp"
        android:layout_marginTop="5dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/skill"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:focusedByDefault="false"
            android:fontFamily="serif-monospace"
            android:text="Specialization"
            android:textSize="20dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/specializationT"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="#55564B93"
            android:ems="10"
            android:inputType="textPersonName" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:layout_marginTop="5dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/skill"
            android:layout_width="173dp"
            android:layout_height="39dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:focusedByDefault="false"
            android:fontFamily="serif-monospace"
            android:text="University"
            android:textSize="20dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/universityT"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="#55564B93"
            android:ems="10"
            android:inputType="textPersonName" />

    </LinearLayout>

    <TextView
        android:id="@+id/work"
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:layout_gravity="center_horizontal|center_vertical|fill_vertical|end"
        android:fontFamily="serif-monospace"
        android:isScrollContainer="false"
        android:lineSpacingExtra="8sp"
        android:text="Work skill"
        android:textColor="#5E056E"
        android:textSize="28sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="19dp"
        android:layout_marginTop="5dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/experiance"
            android:layout_width="165dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:focusedByDefault="false"
            android:fontFamily="serif-monospace"
            android:text="Experiance"
            android:textSize="20dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/experianceT"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="#55564B93"
            android:ems="10"
            android:inputType="textPersonName" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="146dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/skill"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:focusedByDefault="false"
            android:fontFamily="serif-monospace"
            android:text="Skill"
            android:textSize="20dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/skillT"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="#55564B93"
            android:ems="10"
            android:inputType="textPersonName" />

    </LinearLayout>

    <Button
        android:id="@+id/finishBT"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:background="#830D97"
        android:text="Finish"
        android:textColor="@color/white"
        android:textColorHighlight="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:textColorLink="#F6F2F2" />

</LinearLayout>